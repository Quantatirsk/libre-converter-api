# ==============================================================================
# libre-converter-api Configuration
# Copy this file to .env and modify as needed
# ==============================================================================

# ------------------------------------------------------------------------------
# Authentication
# ------------------------------------------------------------------------------
# Enable Bearer token authentication
API_AUTH_ENABLED=false

# Secret token for authentication (required if AUTH_ENABLED=true)
# Generate with: openssl rand -hex 32
API_AUTH_TOKEN=

# ------------------------------------------------------------------------------
# Server
# ------------------------------------------------------------------------------
# Server port
API_PORT=28001

# Number of worker processes (auto = CPU cores)
API_WORKERS=auto

# Request timeout in seconds
API_TIMEOUT=300

# ------------------------------------------------------------------------------
# Limits
# ------------------------------------------------------------------------------
# Maximum upload file size in bytes (default: 500MB)
API_MAX_FILE_SIZE=524288000

# Maximum concurrent conversions
API_MAX_CONCURRENT=10

# ------------------------------------------------------------------------------
# Logging
# ------------------------------------------------------------------------------
# Log level: debug, info, warning, error
LOG_LEVEL=info

# Log format: json, text
LOG_FORMAT=json
